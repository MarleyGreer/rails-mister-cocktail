      <div class="carousel-item active cocktail-image-show" style="background-image: linear-gradient(315deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.7)), url('<%= cl_image_path @cocktail.photos[0].key %>')">
    </div>
      <div class="carousel-item cocktail-image-show" style="background-image: linear-gradient(315deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.7)), url('<%= cl_image_path @cocktail.photos[1].key %>')">
